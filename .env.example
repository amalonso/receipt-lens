# Database Configuration
POSTGRES_DB=receipt_lens
POSTGRES_USER=admin
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql://admin:changeme@db:5432/receipt_lens

# API Keys
# Anthropic API Key for Claude AI (OPTIONAL - will use PaddleOCR local fallback if not provided)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security
JWT_SECRET_KEY=generate_a_random_secret_key_here_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Upload Settings
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Rate Limiting
UPLOAD_RATE_LIMIT_PER_HOUR=10

# CORS
CORS_ORIGINS=http://localhost:8000,http://localhost:3000
